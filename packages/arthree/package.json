{
  "name": "@theholocron/arthree",
  "homepage": "https://github.com/the-holocron/astromech/tree/master/packages/arthree#readme",
  "description": "This utility droid provides a set of single-purpose, functional utilities for writing (S)CSS animation within the Galaxy.",
  "author": "Newton Koumantzelis",
  "version": "0.1.2",
  "main": "src/_index.scss",
  "files": [
    "src"
  ],
  "repository": "https://github.com/the-holocron/astromech.git",
  "bugs": "https://github.com/the-holocron/astromech/issues",
  "releases": "https://github.com/the-holocron/astromech/releases",
  "wiki": "https://github.com/the-holocron/astromech/wiki",
  "license": "GPL-3.0",
  "browserslist": [
    "extends @theholocron/browserslist-config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "stylelint": {
    "extends": "@theholocron/stylelint-config"
  },
  "scripts": {
    "sassdoc": "sassdoc src --dest docs",
    "docs": "for file in src/**/*.scss; do sassdoc2md $file >> ${file%/*}/README.md; done",
    "toc": "markdown-toc -i --bullets '*' --maxdepth 2 src/**/README.md",
    "lint": "stylelint src/**/*.scss",
    "test": "mocha",
    "test:integration": "sass --no-source-map test/integration.test.scss test/integration.test.css"
  },
  "devDependencies": {
    "mocha": "^7.0.0",
    "sass": "^1.25.0",
    "sass-true": "^5.0.0",
    "sassdoc": "^2.7.1"
  },
  "peerDependencies": {
    "sass": "^1.25.0"
  }
}
