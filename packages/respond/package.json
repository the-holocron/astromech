{
  "name": "@theholocron/sledgehammer",
  "homepage": "https://the-holocron.github.io/sledgehammer",
  "description": "This utility droid provides a set of single-purpose, functional utilities for writing CSS within the Galaxy.",
  "author": "Newton Koumantzelis",
  "version": "0.0.0",
  "main": "src/_index.scss",
  "files": [
    "src"
  ],
  "repository": "https://github.com/the-holocron/sledgehammer.git",
  "bugs": "https://github.com/the-holocron/sledgehammer/issues",
  "releases": "https://github.com/the-holocron/sledgehammer/releases",
  "wiki": "https://github.com/the-holocron/sledgehammer/wiki",
  "license": "GPL-3.0",
  "browserslist": [
    "extends @theholocron/browserslist-config"
  ],
  "publishConfig": {
    "access": "public"
  },
  "stylelint": {
    "extends": "@theholocron/stylelint-config",
    "rules": {
      "declaration-no-important": false,
      "max-nesting-depth": 5,
      "plugin/stylelint-selector-no-empty": false
    }
  },
  "scripts": {
    "sassdoc": "sassdoc src --dest docs",
    "docs": "for file in src/**/*.scss; do sassdoc2md $file >> ${file%/*}/README.md; done",
    "dist": "for file in $(find src -type f -name '*.scss' ! -name '_*'); do sass $file:dist/$(basename $file .scss).css; done",
    "postdist": "for file in $(find src -type f -name '*.scss' ! -name '_*'); do sass --style=compressed $file:dist/$(basename $file .scss).min.css; done",
    "toc": "markdown-toc -i --bullets '*' --maxdepth 2 src/**/README.md",
    "lint": "stylelint src/**/*.scss"
  },
  "dependencies": {
    "@theholocron/config": "file:../config",
    "@theholocron/css-syntaxes": "file:../css-syntaxes",
    "@theholocron/scss-functions": "file:../scss-functions",
    "@theholocron/scss-mixins": "file:../scss-mixins"
  },
  "peerDependencies": {
    "sass": "^1.26.3"
  },
  "devDependencies": {
    "mocha": "^7.0.0",
    "sass": "^1.26.3",
    "sass-true": "^5.0.0",
    "sassdoc": "^2.7.1"
  }
}
