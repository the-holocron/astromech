@use "../node_modules/@theholocron/scss-functions/src/list/flat" as *;

/// Default set of directions for the box model
/// @since 0.1.0
/// @prop {String} $all [''] - all sides of the box model
/// @prop {String} $bottom ['bottom'] - only the bottom side will be affected
/// @prop {String} $left ['left'] - only the left side will be affected
/// @prop {String} $right ['right'] - only the right side will be affected
/// @prop {String} $top ['top'] - only the top will be affected
$box-directions: (
	"all": "",
	"bottom": "bottom",
	"left": "left",
	"right": "right",
	"top": "top",
) !default;

// syntax flations
$all: (inherit, initial, unset);
$absolute-size: (xx-small, x-small, small, medium, large, x-large, xx-large, xxx-large);
$attachment: (scroll, fixed, local);
$baseline-position: (baseline, first, last);
